<%- include("header") -%>

  <div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
  </div>

  <div class="box">
  <%  for(let i=0; i<newListItems.length; i++){ %>
      <form action="/delete" method="post">
        <div class="item">
          <input type="checkbox" value="<%= newListItems[i]._id%>" name="checkbox" onChange="this.form.submit()">
          <p><%=  newListItems[i].name  %></p>
        </div>
        <input type="hidden" name="listName" value="<%=listTitle%>"></input>
        <%#//this is used because we want delting the content of custom pages is delted from that page only not from home route page %>
        </form>
      <%   } %>

      <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
        <button type="submit" name="list" value="<%=listTitle %>">+</button>
      </form>
  </div>

<%- include("footer") -%>
